#include <iostream>
using namespace std;

int main() {
    int n;
    cin >> n;
    int count = 0;
    int arr[n][3];
    int str[n];

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < 3; j++) {
            cin >> arr[i][j];
        }
    }

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < 3; j++) {
            if (arr[i][j] == 1) {
                count++;
            }
        }

        if (count >= 2) {
            str[i] = 1;
        } else {
            str[i] = 0;
        }

        count = 0;
    }

    count = 0;
    for (int i = 0; i < n; i++) {
        if (str[i] == 1) {
            count++;
        }
    }

    cout << count << endl;
    return 0;
}
