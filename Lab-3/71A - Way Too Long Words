#include <iostream>
#include <string>
using namespace std;

int main() {
    int t;
    cin >> t;

    for (int i = 0; i < t; i++) {
        string input;
        cin >> input;
        int length = input.length();

        if (length <= 10) {
            cout << input << endl;
        } else {
            cout << input[0] << length - 2 << input[length - 1] << endl;
        }
    }

    return 0;
}
